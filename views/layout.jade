doctype 5
html

  include inc/header
  body
    nav(role="navigation").navbar.navbar-default
      div.navbar-header
        button(type="button" data-toggle="collapse" data-target="#navbar-collapse-1").navbar-toggle
          span.sr-only Toggle Navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a(href="/").navbar-brand 
          img(src = '/img/favicon.png', style='height: 95px; width: 300px; margin-left: -30px;')
      div(style='font-size: 30px; margin-top: 30px; padding-top:10px;').collapse.navbar-collapse#navbar-collapse-1
        ul.nav.navbar-nav.pull-right
          if(!user)
            li
              a(href = '/auth/github') Login
                img(src = '/img/github.ico', style='height:32px; width: 32px; margin-left: 20px;')     
          else
            li
              input(type="hidden", value='#{user.username}')#uid
              |Logged in as #{user.username}
            li#res
            li
              a(href = '/logout') Log Out
  
  
    div.container
      div.row
        div.col-md-12
           block content
    
    include inc/scripts
    block scripts
    
    