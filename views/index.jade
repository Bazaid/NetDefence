extends layout

block content

  h1= title
  p Welcome to #{title}
  div#gridCont
    scg#grid
  div#value
    
  
block scripts
  script.
    grid.setup('grid')
    if (navigator.geolocation)
    {
       navigator.geolocation.getCurrentPosition(function(position){
       grid.updateGrid(position.coords.latitude,position.coords.longitude);
       });
    }
    else{
       console.log("Geolocation is not supported by this browser.");
    }
